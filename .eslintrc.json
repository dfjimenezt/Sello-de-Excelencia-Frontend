{
    "name": "quality-stamp",
    "version": "0.0.1",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "$": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "eqeqeq": "warn"
    }
}
