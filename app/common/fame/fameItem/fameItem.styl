@import '../../../colors.styl'

.fame-item
    max-height: 70px

.fame-item-number-outter
    min-width: 90px;
    max-width: 90px;
    max-height: 90px;
    min-height: 90px;
    border-radius: 90px;
    background: $white;
    padding: 5px;
    box-shadow: 0px 5px 5px #888;
    margin-top: -10px;
    margin-left: -30px;

.fame-item-number
    max-width: 80px
    max-height: 80px
    width: 100%;
    height: 100%;
    min-width: 80px;
    min-height: 80px;
    border-radius: 100%;
    border: solid 5px;
    background: $white;
    font-size: 2em

.fame-item-number-inner
    min-height: 60px;
    max-height: 60px;
    min-width: 60px;
    max-width: 60px;
    border-radius: 100%;
    margin: 5px;
    line-height: 60px;
    text-align: center
    color: $white

.fame-item-number.first
    border-color: $first

.fame-item-number.second
    border-color: $second

.fame-item-number.third
    border-color: $third

.fame-item-number-inner.first
    background: $first
    color: $white

.fame-item-number-inner.second
    background: $second
    color: $white

.fame-item-number-inner.third
    background: $third
    color: $white

.fame-item-number.others
    border-color: $others

.fame-item-number-inner.others
    background: $others
    color: $white

.fame-item img
	width: auto
	height: 70px
